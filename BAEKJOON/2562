package JavaStudy;

import java.util.Scanner;

class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int[] arr = new int[9];
		int A = 0;
		int N = 0;
		for(int i=0;i<arr.length;i++) {
			arr[i] = sc.nextInt();
		}
		for(int i=0;i<arr.length;i++) {
			if(arr[i] > N) {
				N = arr[i];
				A = i+1;
			}
			
		}
		System.out.println(N);
		System.out.println(A);
	}
}
